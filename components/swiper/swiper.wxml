  <swiper class="myswiper" indicator-dots="{{ indicatorDots }}" autoplay="{{ autoplay }}" interval="{{ interval }}" duration="{{ duration }}" indicator-color="#fff" indicator-active-color="#ffd747">

  <block wx:for="{{ swiperData }}" wx:key="index">
     <swiper-item>
       <image src="{{item.url}}" mode="widthFix"/>
     </swiper-item>
  </block>
