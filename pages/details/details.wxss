/* 详情页面整体样式 */
.details {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10px;
  background-color: #f5f5f5;
}

/* 顶部图片样式 */
.topimage {
  width: 100%;
  border-radius: 8px;
  margin-bottom: 15px;
}

/* 内容区域样式 */
.details .content {
  width: 90%;
  background-color: #ffffff;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  padding: 15px;
}

/* 价格部分样式 */
.details .content .price {
  color: #f2270c;
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 10px;
}

.details .content .price text {
  color: #f2270c;
  display: inline-block;
  font-family: JDZH-Regular;
  font-size: 20px;
  line-height: 30px;
}

/* 商品标题样式 */
.details .content .title {
  font-size: 18px;
  font-weight: 700;
  color: #333;
  margin-bottom: 10px;
  text-align: left;
  line-height: 1.4;
}

/* 商品介绍图片样式 */
.details .introduce image {
  width: 100%;
  border-radius: 8px;
  margin-top: 10px;
}
