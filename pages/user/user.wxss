/* 外部容器样式 */
.user-container {
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
  padding: 16px;
}

/* 头部样式 */
.header {
  display: flex;
  align-items: center; /* 垂直居中对齐 */
  background-color: #fff;
  padding: 16px;
  border-radius: 8px;
  margin-bottom: 16px;
}

.header image {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 16px;
  vertical-align: middle; /* 确保图片和文字在同一行 */
}

.header text {
  font-size: 16px;
  color: #333;
  vertical-align: middle; /* 确保文字和图片垂直居中 */
}


.header button {
  width: 310px;
  height: 36px;
  line-height: 36px;
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 18px;
}

/* 我的订单部分 */
.grid-content {
  background-color: #fff;
  padding: 16px;
  border-radius: 8px;
  margin-bottom: 16px;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.my-order {
  font-size: 16px;
  color: #333;
  font-weight: bold;
}

.all-orders {
  font-size: 14px;
  color: #007aff;
}

/* 猜你喜欢部分 */
.like-title {
  font-size: 18px;
  color: #333;
  font-weight: bold;
  margin-bottom: 8px;
}
